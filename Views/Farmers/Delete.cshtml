@model Farmer
@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-trash me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Details
        </a>
    </div>
    <div class="alert alert-danger">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="bi bi-exclamation-octagon-fill fs-3"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h4 class="alert-heading">Warning: Irreversible Action!</h4>
                <p>You are about to permanently delete this farmer and all associated data. This includes:</p>
                <ul>
                    <li>Farmer profile information</li>
                    <li>All products registered under this farmer</li>
                    <li>Any historical data and records</li>
                </ul>
                <hr>
                <p class="mb-0">This action cannot be undone. Please confirm you want to proceed.</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-x me-2"></i>Farmer to be Deleted
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Name:</div>
                        <div class="col-sm-9">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Email:</div>
                        <div class="col-sm-9">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Contact:</div>
                        <div class="col-sm-9">@Model.ContactNumber</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3 fw-bold">Products:</div>
                        <div class="col-sm-9">
                            <span class="badge bg-danger">
                                @(Model.Products?.Count ?? 0) will be deleted
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-archive me-2"></i>Alternative Options
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">Consider these alternatives:</h6>
                        <hr>
                        <ul class="mb-2">
                            <li>Deactivate instead of delete</li>
                            <li>Mark as inactive</li>
                            <li>Archive the records</li>
                        </ul>
                        <div class="mt-2">
                            <a href="#" class="btn btn-sm btn-outline-info me-2">
                                <i class="bi bi-archive"></i> Archive
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-slash-circle"></i> Deactivate
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-lock me-2"></i>Security Note
                    </h5>
                </div>
                <div class="card-body">
                    <p>For security and compliance reasons:</p>
                    <ul>
                        <li>This action will be logged</li>
                        <li>Administrators will be notified</li>
                        <li>Backups will retain data for 30 days</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>