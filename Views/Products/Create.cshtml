@model Product

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container-fluid mt-4">
    <h1>Add New Product</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label"></label>
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductionDate" class="control-label"></label>
                            <input asp-for="ProductionDate" class="form-control" type="date" />
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FarmerId" class="control-label"></label>
                            <select asp-for="FarmerId" class="form-control" asp-items="ViewBag.FarmerId"></select>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5>Guidance</h5>
                </div>
                <div class="card-body">
                    <p>When adding a new product:</p>
                    <ul>
                        <li>Provide accurate product information</li>
                        <li>Select the correct category</li>
                        <li>Enter the actual production date</li>
                    </ul>
                    <p>This information will be visible to employees and used for reporting.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}